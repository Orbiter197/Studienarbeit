<Application x:Class="Skizziere.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Skizziere"
             xmlns:viewModel="clr-namespace:Skizziere.ViewModel"
             xmlns:view="clr-namespace:Skizziere.View"
             StartupUri="View/MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
        
        
        
        
        <DataTemplate DataType="{x:Type viewModel:MainWindowViewModel}">
            <view:MainWindow/>
        </DataTemplate>
        
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
